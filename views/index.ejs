<% include includes/header %>

    <% if(errors) { %>
        <div class="section"></div>
        <div class="row">
            <div class="col s6 offset-s3">
                <% errors.forEach(error => { %>
                    <div class=" red lighten-3 red-text text-darken-3 center center-align" style="margin:5px;padding:5px;border-radius:4px;">
                        <%= error.msg %>
                    </div>

                    <% }) %>
            </div>
        </div>

        <% } %>
            <% if(success) { %>
                <div class="row">
                    <div class="col s6 offset-s3">
                        <% success.forEach(res => { %>
                            <div class="green lighten-3 green-text text-darken-3 center center-align" style="margin:5px;padding:5px;border-radius:4px;">
                                <%= res.msg %>
                            </div>

                            <% }) %>
                    </div>
                </div>

                <% } %>
                    <div class='valign-wrapper'>
                        <div class="hero"></div>
                        <div class="row">
                            <div class="col s8 offset-s2 center-align">
                                <h3 class="title" style="font-size: 2rem;">
                                    Welcome To Create Cards
                                </h3>
                                <p class="indigo-text text-lighten-4 text">
                                    The perfect place to create custom free cards for birthdays, annivasaries and more...
                                </p>
                            </div>
                        </div>
                        <div class="section"></div>
                        <div class="row">
                            <div class="col s6 offset-s3 center-align">
                                <% if(isLoggedIn){ %>
                                    <a href="/new-card" class=" btn-large waves-effect waves-light "><i class="fas fa-plus"></i></a>
                                    <% } else {%>

                                        <a href="/auth/signup" class="btn btn-large waves-effect"><span style="margin:0 10px;">Signup</span><i class="fas fa-sign-in-alt"></i></a>
                                        <% } %>
                            </div>
                        </div>
                    </div>
                    <% include includes/footer %>
                        </body>

                        </html>