<% include includes/header %>
    <h5 class="pageTitle">
        <%= pageTitle %>
    </h5>
    <div class="cards">
        <% cards.forEach(card => { %>
            <div class="center-align">
                <iframe class='frame' src="/card?title=<%= card.title %>&message=<%= card.message %>&sign=<%= card.sign %>&picture=<%= card.picture %>&nonav=true" scrolling='no'>
                        <p>
                            <%= card.createdAt %>
                        </p></iframe>
                <div class="btn" data-cardId='<%= card._id %>'>View</div>
            </div>

            <% })%>
    </div>
    <% include includes/footer %>
        <script>
            const btn = document.querySelectorAll('.btn')
            btn.forEach(button => {
                button.addEventListener('click', () => {
                    window.location.href = `/card/${button.dataset.cardid}`
                })
            })
        </script>
        </body>

        </html>